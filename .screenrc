defutf8 on
defencoding utf8
encoding utf-8 utf-8

escape ^Tt

startup_message off
autodetach on

defscrollback 1000

# log
logfile "$HOME/.screen/screen-%Y%m%d-%n.log"
logtstamp on
logtstamp string "\n-- SCREEN [%Y/%m/%d %02c:%s] %n:%t --\n"
deflog on

# view
caption always "%-w%10L>%{=b bw}%n %t%{-}%+w%-0="
hardstatus alwayslastline "%H%=%Y/%m/%d %02c"
shelltitle "$ |shell"

shell $SHELL
